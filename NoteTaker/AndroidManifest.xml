<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notetaker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_note"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" android:debuggable="true">
        <activity
            android:name="com.example.notetaker.ListNotesActivity"
            android:label="@string/title_activity_list_notes" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.notetaker.EditNoteActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.notetaker.ListNotesActivity" >
        </activity>
    </application>

</manifest>